{
	"name": "@happier-path/core",
	"version": "0.0.1-next.13",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js"
		},
		"./hooks": {
			"types": "./dist/hooks/index.d.ts",
			"svelte": "./dist/hooks/index.js",
			"import": "./dist/hooks/index.js"
		},
		"./responses": {
			"types": "./dist/responses/index.d.ts",
			"import": "./dist/responses/index.js"
		},
		"./schemas": {
			"types": "./dist/schemas/index.d.ts",
			"svelte": "./dist/schemas/index.js",
			"import": "./dist/schemas/index.js"
		},
		"./managers/auth": {
			"types": "./dist/managers/auth.d.ts",
			"svelte": "./dist/managers/auth.js",
			"import": "./dist/managers/auth.js"
		},
		"./managers/route": {
			"types": "./dist/managers/route.d.ts",
			"import": "./dist/managers/route.js"
		}
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/adamjkb/happier-path/issues"
	},
	"homepage": "https://github.com/adamjkb/happier-path",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/adamjkb/happier-path.git",
		"directory": "packages/core"
	},
	"author": {
		"name": "Adam Jakab",
		"url": "https://adamjkb.com"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"authentication"
	],
	"files": [
		"dist",
		"!dist/**/.*.spec.*"
	],
	"scripts": {
		"build": "pnpm package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"dev": "vite dev",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepare": "svelte-kit sync || echo ''",
		"vitest": "vitest",
		"prepublishOnly": "pnpm build",
		"lint:fix": "eslint . --fix",
		"lint": "eslint .",
		"start:e2e": "vite build && ORIGIN=http://localhost:4173 PORT=4173 node .build",
		"test": "pnpm test:e2e",
		"test:e2e": "playwright test"
	},
	"dependencies": {
		"zod": "^4.1.13"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.5.0",
		"svelte": ">=5"
	},
	"devDependencies": {
		"@libsql/client": "^0.15.15",
		"@oslojs/encoding": "^1.1.0",
		"@playwright/test": "catalog:",
		"@rollup/plugin-commonjs": "^29.0.0",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.3",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@vitest/browser": "^3.2.4",
		"dlv": "^1.1.3",
		"eslint": "catalog:",
		"eslint-plugin-svelte": "catalog:",
		"hash-wasm": "^4.12.0",
		"playwright": "^1.57.0",
		"publint": "catalog:",
		"rollup": "^4.53.3",
		"svelte": "^5.45.5",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^3.2.4"
	}
}
